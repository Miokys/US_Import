{% extends 'base.html.twig' %}

{% block title %}s'inscrire{% endblock %}

{% block body %}
<body class="bg-1">
    <div class="container form-bg tables mx-auto my-5">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="container">
            <h1 class="text-center my-4 m-auto text-light border-bottom border-danger col-5">Inscription</h1>
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.adress) }}
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.zip) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

            <div class="container text-center">
                <button type="submit" class="btn btn-success col-6 my-auto">Valider le formulaire</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</body>
{% endblock %}
