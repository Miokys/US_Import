{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<body class="bg-3">
    <div class="container form-bg tables mx-auto my-5">
        <h1 class="text-center m-5 text-light">Liste des Catégories</h1>
        <div class="table-responsive">
            <table class="mb-5 col-12">
        <thead>
            <tr>
                <th class="col">Id</th>
                <th class="col">Email</th>
                <th class="col">Role</th>
                <th class="col">Nom</th>
                <th class="col">Prénom</th>
                <th class="col">Adresse</th>
                <th class="col">Ville</th>
                <th class="col">Code postal</th>
                <th class="col">Date de Naissance</th>
                <th class="col">Verifié</th>
                <th class="col-2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.zip }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>
                    <a class="btn btn-primary m-1 col-12" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
                    <div class="m-1 col-12">
                        {{ include('admin_user/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="container m-auto my-3 text-center">
            <a class="mx-auto d-block btn btn-light col-6" href="{{ path('app_admin_user_new') }}">Créer un nouvel utilisateur</a>
        </div>
    </div>

</body>
{% endblock %}
