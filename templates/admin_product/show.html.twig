{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>marque</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ product.model }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('/uploads/img/') }}{{ product.img }}" alt="{{ product.brand }},{{ product.model }}"></td>
            </tr>
            <tr>
                <th>Description Courte</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description détaillée</th>
                <td>{{ product.fullDescription }}</td>
            </tr>
            <tr>
                <th>Année de production</th>
                <td>{{ product.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}">Retour à la liste</a>

    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">editer</a>

    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
