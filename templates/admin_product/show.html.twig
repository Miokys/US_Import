{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ product.model }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>FullDescription</th>
                <td>{{ product.fullDescription }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ product.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}">back to list</a>

    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
