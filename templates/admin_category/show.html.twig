{% extends 'base.html.twig' %}

{% block title %}Vue {{ category.name }}{% endblock %}

{% block body %}
    <h1>Catégore des {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn-btn-outline-info" href="{{ path('app_admin_category_index') }}">Retour à la liste</a>

    <a class="btn-btn-outline-primary" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}
