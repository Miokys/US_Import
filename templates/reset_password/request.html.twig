{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<body class="bg-1">
    <div class="container form-bg tables mx-auto my-5">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse mail et nous vous enverrons un lien pour modifier votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Recevoir le lien de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
    </div>
</body>
{% endblock %}
